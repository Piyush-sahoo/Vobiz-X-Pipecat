# OpenAI API Key (Required for LLM, STT, TTS)
OPENAI_API_KEY=

# Deepgram API Key (Optional - alternative STT provider)
DEEPGRAM_API_KEY=

# Vobiz Credentials (Required)
VOBIZ_AUTH_ID=
VOBIZ_AUTH_TOKEN=

# Vobiz Phone Number (Optional)
# Only required if using /start endpoint
# Not needed if calling Vobiz API directly with curl
VOBIZ_PHONE_NUMBER=

# Environment configuration
ENV=local

# Public URL (Required for ngrok deployments)
# Update this with your ngrok URL when testing locally
# Example: PUBLIC_URL=https://abc123.ngrok-free.app
PUBLIC_URL=